<Window x:Class="Tickets.Airplane.ViewForm3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tickets.Passenger"
        mc:Ignorable="d"
        Title="ViewForm" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" >
    <DockPanel >
        <GroupBox Header="Запросы">
            <StackPanel>
                <RadioButton x:Name="sql1" Content="Наименование авиакомпании и модель самолета"  GroupName="1" Margin="3"/>
                <Button Content="Определить" x:Name="Find" Margin="3" Click="Find_Click"/>
            </StackPanel>
        </GroupBox>
        <DataGrid x:Name="Viewtable" IsReadOnly="True" Margin="3" MinWidth="300" AutoGeneratedColumns="Viewtable_AutoGeneratedColumns"/>
    </DockPanel>
</Window>