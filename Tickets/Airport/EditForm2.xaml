<Window x:Class="Tickets.EditForm2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tickets"
        mc:Ignorable="d"
       Title="EditForm" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <DockPanel >
        <GroupBox >
            <StackPanel >
                <Label >КодАэропорта</Label>
                <TextBox x:Name="КодАэропорта" IsReadOnly="True" Margin="3" />
                <Label >Наименование</Label>
                <TextBox x:Name="Наименование" Margin="3" />
                <Label >Город</Label>
                <TextBox x:Name="Город" Margin="3" />
                <Label >Телефон</Label>
                <TextBox x:Name="Телефон" Margin="3" />
               <Button Content="Редактировать" IsDefault="True" Margin="3" Click="AddMain_Click"/>
                <Button Content="Отмена" Margin="3" Click="CloseMain_Click" />
            </StackPanel>
        </GroupBox>
    </DockPanel>
</Window>
